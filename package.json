{
  "name": "@leihs/ui",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run -s build:theme && node server.js",
    "start": "NODE_ENV=production node server.js",
    "build": "npm run -s build:theme && npm run -s build:ssr",
    "build:ssr": "npm run -s build:lib && npm run -s build:ssr-cli",
    "build:ssr-cli": "ncc build ./ssr-cli.js --no-cache --out tmp/ssr && cat tmp/ssr/index.js >> dist/leihs-ssr.js && rm tmp/ssr/index.js && echo '#!/usr/bin/env node' > dist/leihs-ssr && cat dist/leihs-ssr.js >> dist/leihs-ssr && chmod +x dist/leihs-ssr",
    "build:theme": "npm run -s build:theme-regular && npm run -s build:theme-mobile",
    "build:theme-regular": "rm -rf bootstrap-theme-leihs/build && cd bootstrap-theme-leihs && npm run build",
    "build:theme-mobile": "rm -rf bootstrap-theme-leihs-mobile/build && cd bootstrap-theme-leihs-mobile && npm run build",
    "build:storybook": "build-storybook --quiet -c .storybook -s static -o build",
    "build:lib": "rm -rf dist && npm run -s build:symlinks && NODE_ENV=production npx webpack --bail --cache --config ./webpack.config.js && npm run build:uipackage && rm -f dist/*.html dist/*.json dist/main.* dist/precache-manifest.* dist/service-worker.js",
    "build:uipackage": "echo '{\"name\":\"@leihs/ui-components\"}' > dist/ui-components/package.json",
    "watch:lib": "NODE_ENV=development npx webpack --watch --progress --config ./webpack.config.js",
    "watch:theme": "{ cd bootstrap-theme-leihs && npm run watch ;} & { cd bootstrap-theme-leihs-mobile && npm run watch ;}",
    "build:symlinks": "bin/build-symlinks",
    "now-build": "npm i -g npm@7 && bin/build-core && npm run -s build:storybook",
    "build-lib": "npm run -s build:lib",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test-lib": "node -p 'window=this; l = require(\"./dist/leihs-ui-server-side.js\"); l.renderComponentToStaticMarkup(\"Navbar\", {})'",
    "deploy": "npm i && npx now",
    "test": "react-scripts test --env=jsdom",
    "storybook": "start-storybook -p 9009 -s static"
  },
  "engines": {
    "node": ">=14.17.3",
    "npm": ">=7.19.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@leihs/calendar": "2.1.0",
    "color": "^3.1.3",
    "date-fns": "^2.22.1",
    "intl-messageformat": "^9.9.1",
    "lodash": "^4.17.21",
    "lodash.isnumber": "^3.0.3",
    "prop-types": "^15.7.2",
    "react-bootstrap": "2.0.0-beta.4",
    "react-swipeable-views": "^0.14.0",
    "react-with-direction": "^1.3.1",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime-corejs3": "^7.14.0",
    "@leihs/theme": "file:bootstrap-theme-leihs",
    "@leihs/theme-mobile": "file:bootstrap-theme-leihs-mobile",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-backgrounds": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-storyshots": "^6.4.19",
    "@storybook/addon-storysource": "^6.4.19",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/addons": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@vercel/ncc": "^0.33.3",
    "babel-eslint": "^9.0.0",
    "core-js": "^3.21.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mockdate": "^2.0.5",
    "prettier": "^2.5.1",
    "prettier-eslint": "^8.8.2",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "react-test-renderer": "^17.0.2",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "plugin:react/recommended"
    ],
    "ignorePatterns": [
      "src/static/**",
      "src/theme/**",
      "src/theme-mobile/**"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ],
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      },
      {
        "files": [
          "src/**/*.stories.js"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "react-hooks/rules-of-hooks": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
