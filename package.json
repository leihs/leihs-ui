{
  "name": "@leihs/ui",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "cd bootstrap-theme-leihs && { test -d node_modules && npm i || { npm ci || npm i ;} ;}",
    "dev": "npm run -s build:theme && node server.js",
    "start": "NODE_ENV=production node server.js",
    "build": "npm run -s build:theme && npm run -s build:ssr",
    "build:ssr": "npm run -s build:lib && npm run -s build:ssr-cli",
    "build:ssr-cli": "ncc build ./ssr-cli.js --no-cache --out tmp/ssr && echo 'window = global = this;' >> dist/leihs-ssr.js && cat tmp/ssr/index.js >> dist/leihs-ssr.js && rm tmp/ssr/index.js && echo '#!/usr/bin/env node' > dist/leihs-ssr && cat dist/leihs-ssr.js >> dist/leihs-ssr && chmod +x dist/leihs-ssr",
    "build:theme": "npm run -s build:symlinks && cd bootstrap-theme-leihs && npm run build",
    "build:storybook": "build-storybook --quiet -c .storybook -s static -o build",
    "build:lib": "rm -rf dist && npm run -s build:symlinks && NODE_ENV=production npx webpack --no-progress --bail --cache=true --config ./webpack.config.js && rm dist/*.html dist/*.json dist/main.* dist/precache-manifest.* dist/service-worker.js",
    "watch:lib": "NODE_ENV=development npx webpack --watch --info-verbosity verbose --config ./webpack.config.js",
    "build:symlinks": "rm -f src/static src/theme src/legacy static/theme && cd src && ln -fs ../static static && ln -fs ../legacy legacy && ln -fs ../bootstrap-theme-leihs/build theme && cd ../static && ln -fs ../bootstrap-theme-leihs/build theme",
    "now-build": "npm run -s build && npm run -s build:storybook",
    "build-lib": "npm run -s build:lib",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test-lib": "node -p 'window=this; l = require(\"./dist/leihs-ui-server-side.js\"); l.renderComponentToStaticMarkup(\"Navbar\", {})'",
    "deploy": "npm i && npx now",
    "test": "react-scripts test --env=jsdom",
    "storybook": "start-storybook -p 9009 -s static"
  },
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.0",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@leihs/calendar": "2.0.0-beta.5",
    "color": "^3.1.3",
    "date-fns": "^2.16.1",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2",
    "react-with-direction": "^1.3.1",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.11.5",
    "@babel/runtime-corejs3": "^7.12.0",
    "@storybook/addon-a11y": "^6.1.0-alpha.24",
    "@storybook/addon-actions": "^6.1.0-alpha.24",
    "@storybook/addon-backgrounds": "^6.1.0-alpha.24",
    "@storybook/addon-docs": "^6.1.0-alpha.24",
    "@storybook/addon-links": "^6.1.0-alpha.24",
    "@storybook/addon-storyshots": "^6.1.0-alpha.24",
    "@storybook/addon-storysource": "^6.1.0-alpha.24",
    "@storybook/addon-viewport": "^6.1.0-alpha.24",
    "@storybook/addons": "^6.1.0-alpha.24",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.1.0-alpha.24",
    "@zeit/ncc": "^0.18.5",
    "core-js": "^3.6.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-prettier": "^2.6.2",
    "mockdate": "^2.0.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^8.8.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.3",
    "react-test-renderer": "^16.14.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
